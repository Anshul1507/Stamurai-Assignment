<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".homepage.MainFragment">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/StyleButtons"
            android:padding="16dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="24dp"
            android:text="@string/rating"
            android:layout_centerInParent="true"
            android:textSize="20sp"/>

        <com.google.android.material.button.MaterialButton
            android:layout_below="@id/btn_rating"
            android:id="@+id/btn_minus_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/StyleButtons"
            android:gravity="center"
            android:layout_marginStart="48dp"
            android:text="@string/minus"
            android:textSize="28sp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_plus_rating"
            android:layout_below="@id/btn_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/StyleButtons"
            android:layout_marginEnd="48dp"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:text="@string/plus"
            android:textSize="28sp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_past_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/see_all_past_ratings"
            android:textSize="16sp"
            android:padding="16dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="32dp"
            style="@style/StyleButtons"

            />
    </RelativeLayout>

</layout>